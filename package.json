{
  "author": "Sabri Haddouche",
  "dependencies": {
    "@types/express": "4.0.39",
    "@types/node": "8.0.34",
    "@types/nodemailer": "^4.3.1",
    "body-parser": "^1.18.2",
    "btoa": "^1.1.2",
    "express": "4.16.2",
    "helmet": "3.9.0",
    "nodemailer": "^4.4.0"
  },
  "devDependencies": {
    "cross-env": "5.1.1",
    "husky": "0.14.3",
    "jasmine": "2.8.0",
    "karma": "1.7.1",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-diff-reporter": "1.1.1",
    "karma-sourcemap-loader": "0.3.7",
    "lint-staged": "5.0.0",
    "prettier": "1.8.2",
    "rimraf": "2.6.2",
    "typescript": "2.6.1"
  },
  "description": "Mailsploit Server",
  "license": "GPL-3.0",
  "lint-staged": {
    "*.ts": [
      "yarn lint",
      "git add"
    ]
  },
  "main": "./dist/commonjs/index.js",
  "name": "mailsploit-server",
  "repository": {
    "type": "git",
    "url": "https://localhost"
  },
  "scripts": {
    "start": "node ./dist/commonjs/index.js",
    "clear": "rimraf dist",
    "dist": "yarn clear && tsc",
    "lint": "prettier --single-quote --trailing-comma all --no-bracket-spacing --print-width 120 --write \"src/**/*.ts\"",
    "postversion": "git push && git push --tags",
    "precommit": "lint-staged",
    "preversion": "yarn && yarn dist && yarn test",
    "test:browser": "true",
    "test:node": "cross-env JASMINE_CONFIG_PATH=src/test/node/support/jasmine.json jasmine",
    "test": "yarn lint && yarn dist && yarn test:node && yarn test:browser",
    "version": "yarn dist"
  },
  "types": "./dist/commonjs/index.d.ts",
  "version": "0.1.0"
}
